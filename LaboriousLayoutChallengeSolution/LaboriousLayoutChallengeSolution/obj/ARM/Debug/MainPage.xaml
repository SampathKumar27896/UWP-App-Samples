<Page
    x:Class="LaboriousLayoutChallengeSolution.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LaboriousLayoutChallengeSolution"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">



    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <RelativePanel Grid.Row="0" >
            <Button x:ConnectionId='8' Foreground="Wheat" Name="SearchButton" Content="Search" RelativePanel.AlignRightWithPanel="True"/>
            <TextBox x:ConnectionId='9' Foreground="Wheat" Name="SearchTextBox" Width="50" Height="25" RelativePanel.LeftOf="SearchButton"/>
            <TextBlock x:ConnectionId='10' Foreground="Wheat" Name="SearchTextBlock" Text="Search:" RelativePanel.LeftOf="SearchTextBox"/>
            <TextBlock x:ConnectionId='11' Foreground="Wheat" Name="Title" Text="Title 1" FontWeight="Bold" RelativePanel.AlignLeftWithPanel="True"/>
        </RelativePanel>
        <RelativePanel Height="300" Grid.Row="1">
            <Rectangle x:ConnectionId='3' Name="RedRectangle"
                       Fill="Red"
                       Width="100"
                       Height="100"
                       RelativePanel.AlignRightWithPanel="True"/>
            <Rectangle x:ConnectionId='4' Name="BlueRectangle"
                       Fill="Blue"
                       Width="50"
                       Height="50"
                       RelativePanel.LeftOf="RedRectangle"/>
            <Rectangle x:ConnectionId='5' Name="GreenRectangle"
                       Fill="Green"
                       Width="50"
                       Height="50"
                       RelativePanel.AlignVerticalCenterWith="RedRectangle"
                       RelativePanel.AlignHorizontalCenterWithPanel="True"/>
            <Rectangle x:ConnectionId='6' Name="PurpleRectangle"
                       Fill="Purple"
                       Width="660"
                       Height="50"
                       RelativePanel.AlignRightWith="RedRectangle"
                       RelativePanel.AlignLeftWith="GreenRectangle"
                       RelativePanel.Below="RedRectangle"/>
            <Rectangle x:ConnectionId='7' Name="YellowRectangle"
                       Fill="Yellow"
                       Width="50"
                       Height="150"
                       RelativePanel.AlignBottomWithPanel="True"
                       RelativePanel.AlignTopWith="PurpleRectangle"/> 
        </RelativePanel>
        <Border BorderThickness="3" Background="#FFE0E0E0" Grid.Row="2" BorderBrush="#FFD2D2D2">
            <RelativePanel>
                <TextBlock x:ConnectionId='1' Name="ItemsTextBlock" Text="Items:" RelativePanel.AlignLeftWithPanel="True" Margin="10,5,0,5" />
                <TextBlock Text="10" RelativePanel.RightOf="ItemsTextBlock" Margin="5,5,0,5" />

                <TextBlock  Text="Version:" RelativePanel.LeftOf="VersionTextBlock" Margin="0,5,5,5" />
                <TextBlock x:ConnectionId='2' Name="VersionTextBlock" Text="1.0.0"  RelativePanel.AlignRightWithPanel="True" Margin="0,5,10,5" />

                <StackPanel RelativePanel.AlignHorizontalCenterWithPanel="True" Orientation="Horizontal">
                    <TextBlock Text="User:" Margin="0,5,5,5" />
                    <TextBlock Text="Sampath" Margin="0,5,0,5" />
                </StackPanel>

            </RelativePanel>
        </Border>

    </Grid>

</Page>

