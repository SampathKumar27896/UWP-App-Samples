<Page
    x:Class="Marshal.Login"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Marshal"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="Black">
        <Image Source="/Assets/Marshall.JPG" Height="1920"  NineGrid="3,3,3,3"/>
        <RelativePanel>
            
            <TextBox x:ConnectionId='1'
                Name="Mail_textbox"
                PlaceholderText="Enter mail-id"
                
                Opacity="1"
                FontFamily="Segoe UI"
                FontWeight="Light"
                Height="Auto"
                Width="260"
               RelativePanel.AlignHorizontalCenterWithPanel="True"
                RelativePanel.AlignTopWithPanel="True"
                Margin="0,220,0,0"
                />
            <PasswordBox x:ConnectionId='2'
                Name="Password_textbox"
                    PlaceholderText="Enter Password"
                     Opacity="1"
                FontFamily="Segoe UI"
                FontWeight="Light"
                Height="Auto"
                Width="260"
                
                RelativePanel.Below="Mail_textbox"
                RelativePanel.AlignHorizontalCenterWithPanel="True"
                Margin="0,15,0,0"
                />


            <Button x:ConnectionId='3'
                Name="SignUp_button"
                
                Height="35"
                Width="260"
                Content="Login"
                
                Foreground="White"
                Background="Blue"
                Opacity="0.5"
                 RelativePanel.Below="Password_textbox"
                RelativePanel.AlignHorizontalCenterWithPanel="True"
                Margin="0,15,0,0"
                />
        </RelativePanel>
    </Grid>
</Page>

